<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="?attr/colorOnSurface"
            app:title="Settings"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_xlarge"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

            <!-- Processing Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processing"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_use_gpu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GPU Acceleration"
                        android:textSize="16sp" />

                    <Space android:layout_width="match_parent" android:layout_height="@dimen/spacing_large" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Target Log Curve">

                        <AutoCompleteTextView
                            android:id="@+id/menu_target_log"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="N/A" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="match_parent" android:layout_height="@dimen/spacing_medium" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="HDR+ Burst Frames">

                        <AutoCompleteTextView
                            android:id="@+id/menu_hdr_burst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3D LUTs Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3D LUT Management"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_live_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Live Preview"
                        android:textSize="16sp" />

                    <Space android:layout_width="match_parent" android:layout_height="@dimen/spacing_large" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_manage_luts"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage LUTs"
                        app:icon="@drawable/ic_lut" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Output Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Output Format"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_save_tiff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save TIFF (16-bit)" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_save_jpg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save JPEG" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Camera Controls Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera Controls"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_manual_controls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Manual Controls"
                        android:textSize="16sp" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_fast_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exp: Fast Exposure (ZSL)"
                        android:textSize="16sp" />

                    <Space android:layout_width="match_parent" android:layout_height="@dimen/spacing_large" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Default Focal Length">

                        <AutoCompleteTextView
                            android:id="@+id/menu_default_focal_length"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="N/A" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="match_parent" android:layout_height="@dimen/spacing_medium" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Antibanding Mode">

                        <AutoCompleteTextView
                            android:id="@+id/menu_antibanding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="Auto" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
