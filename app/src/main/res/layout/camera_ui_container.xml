<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_ui_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <!-- Transparent Touch Overlay for dismissing menus -->
    <View
        android:id="@+id/touch_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/manual_controls_root"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Controls -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lut_button"
        style="@style/Widget.App.Button.IconButton.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:icon="@drawable/ic_lut"
        app:iconTint="?attr/colorOnSurface"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Select LUT"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_button"
        style="@style/Widget.App.Button.IconButton.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:icon="@drawable/ic_settings"
        app:iconTint="?attr/colorOnSurface"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/settings_button_alt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/flash_button"
        style="@style/Widget.App.Button.IconButton.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:icon="@drawable/ic_flash_off"
        app:iconTint="?attr/colorOnSurface"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/toggle_flash"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hdr_plus_toggle"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="HDR+"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_medium" />

    <!-- LUT List Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lut_list_container"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
        app:cardCornerRadius="@dimen/radius_medium"
        app:layout_constraintTop_toBottomOf="@id/lut_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/manual_controls_root"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_max="300dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lut_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Physical Lens Controls -->
    <HorizontalScrollView
        android:id="@+id/lens_controls_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/manual_controls_root"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lens_controls_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_medium">
            <!-- Dynamically populated -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Zoom Controls (Legacy/Digital) -->
    <LinearLayout
        android:id="@+id/zoom_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@id/manual_controls_root"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zoom_toggle"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:text="@string/zoom_1x"
            android:textSize="14sp"
            android:padding="0dp"
            app:cornerRadius="@dimen/radius_full"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zoom_2x"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="@string/zoom_2x"
            android:textSize="14sp"
            android:padding="0dp"
            app:cornerRadius="@dimen/radius_full"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

    <!-- Manual Controls Panel -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/manual_controls_root"
        style="@style/Widget.App.Card.ControlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottom_island_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Tabs -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/manual_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:selectionRequired="false"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tab_focus"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Focus" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tab_iso"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ISO" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tab_shutter"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sec" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tab_ev"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EV" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Control Panel -->
            <LinearLayout
                android:id="@+id/manual_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_manual_value"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Auto"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:gravity="center" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/seekbar_manual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:valueFrom="0.0"
                        android:valueTo="1000.0"
                        android:value="0.0" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_manual_auto"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto" />
                </LinearLayout>

                <!-- Focus Specific Shortcuts -->
                <LinearLayout
                    android:id="@+id/focus_extras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_focus_near"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:text="Macro" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_focus_far"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infinity" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Control Island -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_island_card"
        style="@style/Widget.App.Card.ControlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:alpha="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_small"
            android:paddingHorizontal="@dimen/padding_large">

            <ImageButton
                android:id="@+id/camera_capture_button"
                android:layout_width="@dimen/shutter_button_size"
                android:layout_height="@dimen/shutter_button_size"
                android:background="@drawable/ic_shutter"
                android:scaleType="fitCenter"
                android:contentDescription="@string/capture_button_alt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/capture_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:visibility="gone"
                app:indicatorSize="@dimen/shutter_button_size"
                app:trackThickness="4dp"
                app:indicatorColor="?attr/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/camera_capture_button"
                app:layout_constraintBottom_toBottomOf="@id/camera_capture_button"
                app:layout_constraintStart_toStartOf="@id/camera_capture_button"
                app:layout_constraintEnd_toEndOf="@id/camera_capture_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/camera_switch_button"
                style="@style/Widget.App.Button.IconButton.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_switch"
                app:iconTint="?attr/colorOnSurface"
                android:backgroundTint="?attr/colorSurfaceContainerHighest"
                android:contentDescription="@string/switch_camera_button_alt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/camera_capture_button"
                app:layout_constraintBottom_toBottomOf="@id/camera_capture_button" />

            <ImageButton
                android:id="@+id/photo_view_button"
                android:layout_width="@dimen/round_button_medium"
                android:layout_height="@dimen/round_button_medium"
                android:padding="@dimen/spacing_medium"
                android:scaleType="fitCenter"
                android:background="@drawable/ic_outer_circle"
                android:src="@drawable/ic_photo"
                android:contentDescription="@string/gallery_button_alt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/camera_capture_button"
                app:layout_constraintBottom_toBottomOf="@id/camera_capture_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
